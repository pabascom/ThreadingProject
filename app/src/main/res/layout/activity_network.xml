<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.NetworkActivity">

    <Button android:id="@+id/btnHttpUrlConnection"
            android:text="Native Http URL Connection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button android:id="@+id/btnOkHttpSync"
            android:text="OkHttp Sync"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button android:id="@+id/btnOkHttpAsync"
            android:text="OkHttp Async"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button android:id="@+id/btnRetrofitAsync"
            android:text="Retrofit Async"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button android:id="@+id/btnStartListening"
            android:text="Start Listening to Observable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button android:id="@+id/btnStopListening"
            android:text="Stop Listening"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</LinearLayout>