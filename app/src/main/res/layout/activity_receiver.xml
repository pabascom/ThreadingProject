<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.ReceiverActivity">

    <EditText
            android:id="@+id/etReceiverContent"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/btnSendBroadcast"
            android:text="Send and Ye Shall Receive"
            android:textAlignment="center"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/btnSendBroadcastOutside"
            android:text="Send Further, and Someone Else Shall Receive"
            android:textAlignment="center"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tvReceiverContent"
            android:textAlignment="center"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

</LinearLayout>