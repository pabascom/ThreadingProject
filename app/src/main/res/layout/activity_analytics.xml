<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.AnalyticsActivity">

    <Button
            android:id="@+id/btnRunning"
            android:text="Running"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/btnWalking"
            android:text="Walking"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/btnSwimming"
            android:text="Swimming"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/btnLoadImage"
            android:text="Load Image"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tvLoadImageResult"
            android:text="Click above to load image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/ivMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/btnForceCrash"
            android:text="Force Crash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</LinearLayout>