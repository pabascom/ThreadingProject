<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.FragmentActivity">

    <fragment
            android:id="@+id/staticFragment"
            android:name="phil.homework.threadingproject.ui.fragment.StaticFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button android:id="@+id/btnAddFragment"
            android:text="Add Fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button android:id="@+id/btnRemoveFragment"
            android:text="Remove Fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <FrameLayout
            android:id="@+id/dynamicFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <FrameLayout
            android:id="@+id/dynamicFragment2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</LinearLayout>